pipeline {
    agent { docker { image 'python:3.5.1' } }
    stages {
        stage('build') {
            steps {
                sh 'python --version'
		echo "import os" >> folder.py
		echo "fld = '/marti'" >> folder.py
		echo "os.mkdir"(fld) >> folder.py
		echo "print('Folder is created!')" >> folder.py
            }
        }
	stage('run') {
            steps {
                sh 'ls'
            }
        }
    }
}
